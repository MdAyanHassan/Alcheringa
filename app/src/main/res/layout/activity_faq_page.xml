<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Background"
    tools:context=".FaqPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/topheaderbottomborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">


        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/backbtn2"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            style="@style/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="FAQs"
            android:fontFamily="@font/clash_display_700"
            android:textColor="@color/lighterPurple"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/backbtn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="28dp"
            android:paddingTop="20dp"
            android:paddingBottom="90dp">

            <LinearLayout
                android:id="@+id/faq1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="How can I buy merch?"
                    android:textSize="16sp"
                    android:lineHeight="20sp" />

                <TextView
                    android:id="@+id/details1"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="You can buy the exclusive Alcheringa merch by using the Alcheringa mobile app. Just go to the 'shop' page, where you will find all the available merchandise. Select the merch of your choice and order!"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="Will the merch be delivered home ?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details2"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="Yes! Your ordered merch will be shipped to the shipping address that you register while ordering them."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/faq4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="How can I buy Alcher cards?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details4"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="Head over to the events section of the App and click on get card to purchase your Alcher cards for yourself and your friends."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="How can I register for competitions?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details5"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="Head over to the Competitions tab, choose the competition of your choice, get yourself registered and bring your game to Alcheringa 23â€™s exciting range of competitions."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="How can I attend offline Alcheringa events?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details6"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="You purchase Alcher cards through which you can avail a legion of benefits like Free access to pronites, discounts on merchandise and many more benefits awaiting in campus."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="Where can I find the event schedule and lineup?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details7"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="The event schedule for Alcheringa 2023 events can be found on the app under the Schedule tab."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="Is there any registration fee for competitions?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details10"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="There is no registration fee for competitions. All you have to do is register yourself at registration.alcheringa.in ."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="When will competition results be announced?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details12"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="Competitions are judged and results released soon after in the coming weeks after Alcheringa 2023."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    style="@style/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aileron_bold"
                    android:text="Where can I get updates on competitions?"
                    android:textSize="16sp"
                    android:lineHeight="20sp"   />

                <TextView
                    android:id="@+id/details8"
                    style="@style/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineHeight="24sp"
                    android:text="Be the first to get all the latest updates on all the competitions and events on our social media and on our app. Make sure you have turned on notifications for our social media handles and App for regular notifications of all the fun-filled events and activities taking place around the campus."
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/aileron_bold"
        android:text="Didn't find what you are looking for?"
        style="@style/primaryText"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/contact_us_button"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/contact_us_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/aileron_bold"
        android:text="Contact Us"
        android:textColor="@color/OrangeText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

