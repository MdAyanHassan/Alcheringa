<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Background"
    tools:context=".ContactUs">


    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <TextView
        android:id="@+id/contact_us_text"
        style="@style/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Contact Us"
        android:layout_marginTop="20dp"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@id/backbtn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/contact_border_1"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_text">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_bold"
            android:text="Arnold Williams"
            style="@style/primaryText"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_regular"
            android:text="Pr &amp;  branding"
            style="@style/subText"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title1"
            tools:layout_editor_absoluteX="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_image_9dp"
                app:srcCompat="@drawable/nitish" />

            <Button
                android:id="@+id/call_btn1"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:background="@drawable/contact_border_2"
                android:fontFamily="@font/aileron_bold"
                android:paddingHorizontal="29dp"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/OrangeText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/email_btn1"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/contact_border_2"
                android:fontFamily="@font/aileron_bold"
                android:text="Email"
                android:textAllCaps="false"
                android:textColor="@color/OrangeText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/call_btn1"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/contact_border_1"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_1">

        <TextView
            android:id="@+id/name2"
            style="@style/primaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_bold"
            android:text="Arnold Williams"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title2"
            style="@style/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_regular"
            android:text="Pr &amp;  branding"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title2"
            tools:layout_editor_absoluteX="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_image_9dp"
                app:srcCompat="@drawable/atharva" />

            <Button
                android:id="@+id/call_btn2"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:background="@drawable/contact_border_2"
                android:fontFamily="@font/aileron_bold"
                android:paddingHorizontal="29dp"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/OrangeText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/email_btn2"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/contact_border_2"
                android:fontFamily="@font/aileron_bold"
                android:paddingHorizontal="16dp"
                android:text="Email"
                android:textAllCaps="false"
                android:textColor="@color/OrangeText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/call_btn2"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/contact_border_1"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_2">

        <TextView
            android:id="@+id/name3"
            style="@style/primaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_bold"
            android:text="Arnold Williams"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title3"
            style="@style/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_regular"
            android:text="Pr &amp;  branding"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title3"
            tools:layout_editor_absoluteX="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_image_9dp"
                app:srcCompat="@drawable/fahim" />

            <Button
                android:id="@+id/call_btn3"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:background="@drawable/contact_border_2"
                android:fontFamily="@font/aileron_bold"
                android:paddingHorizontal="29dp"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/OrangeText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/email_btn3"
                android:layout_width="148dp"
                android:layout_height="44dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/contact_border_2"
                android:fontFamily="@font/aileron_bold"
                android:paddingHorizontal="16dp"
                android:text="Email"
                android:textAllCaps="false"
                android:textColor="@color/OrangeText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/call_btn3"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
