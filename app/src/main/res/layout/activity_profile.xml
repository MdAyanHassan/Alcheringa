<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    style="@style/Background">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbtn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="64dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/themeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/theme_button"
                    android:longClickable="true"
                    android:theme="@style/themeButton" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profile_image"
                        android:layout_width="215dp"
                        android:layout_height="215dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/user_photo_default"
                        app:civ_border_color="#000000"
                        app:civ_border_width="1dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:fontFamily="@font/starguard"
                        android:textSize="28sp"
                        android:theme="@style/primaryText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image"
                        tools:text="Username" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/edit_dp_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="330dp"
                android:src="@drawable/ic_edit_dp"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:theme="@style/primaryText">

                <TextView
                    android:id="@+id/interests_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/aileron_bold"
                    android:text="Interests"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/interests_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/interests_heading">

                    <LinearLayout
                        style="@style/interests_horizontal_container"
                        android:layout_width="match_parent">

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Dance" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Music" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Traditional" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/interests_horizontal_container"
                        android:layout_width="match_parent">

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Indie" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Rock" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Classical" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/interests_horizontal_container"
                        android:layout_width="match_parent">

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="EDM" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Soothing" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Metal" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/interests_horizontal_container"
                        android:layout_width="match_parent">

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Art" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Aesthetics" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="History" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/interests_horizontal_container"
                        android:layout_width="match_parent">

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Ethnic" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Fashion" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Colors" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/interests_horizontal_container"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="4dp">

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Soul" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Serene" />

                        <TextView
                            style="@style/select_interest_item_profile"
                            android:text="Bands" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>