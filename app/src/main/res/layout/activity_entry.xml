<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">

<!--    back arrow button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_left"
        app:layout_constraintBottom_toTopOf="@+id/frame_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.684" />

<!--    are you in campus?-->
    <LinearLayout
        android:id="@+id/frame_6"
        android:layout_width="347dp"
        android:layout_height="114dp"
        android:layout_alignParentTop="true"
        app:layout_constraintVertical_bias="0.130"
        android:background="@drawable/frame_6_highlighted"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/hk_grotesk"
            android:gravity="center"
            android:text="Are you in Campus?"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textFontWeight="700"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="140dp"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="68dp"
                android:layout_height="39dp"
                android:layout_margin="2sp"
                android:background="@null"
                android:button="@drawable/radio_button_background"
                android:checked="true"
                android:fontFamily="@font/hk_grotesk"
                android:text="  YES"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="64dp"
                tools:layout_editor_absoluteY="214dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="68dp"
                android:layout_height="39dp"
                android:layout_margin="2sp"
                android:background="@null"
                android:button="@drawable/radio_button_background"
                android:fontFamily="@font/hk_grotesk"
                android:text="  NO"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="227dp"
                tools:layout_editor_absoluteY="211dp" />
        </RadioGroup>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/blur_rectangle"
        android:orientation="vertical"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_6">

        <TextView
            android:id="@+id/interests_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Select atleast 5 interests"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textFontWeight="700"
            android:fontFamily="@font/hk_grotesk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interests_layout"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/interests_heading">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:flow_horizontalAlign="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Dance"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="0sp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/hk_grotesk"
                    android:gravity="center"
                    android:background="@drawable/interests"
                    android:layout_margin="2dp"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Music"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="0sp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/hk_grotesk"
                    android:gravity="center"
                    android:background="@drawable/interests"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Traditional"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="0sp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/hk_grotesk"
                    android:gravity="center"
                    android:background="@drawable/interests"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:flow_horizontalAlign="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Indie"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="0sp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/hk_grotesk"
                    android:gravity="center"
                    android:background="@drawable/interests"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rock"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="0sp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/hk_grotesk"
                    android:gravity="center"
                    android:background="@drawable/interests"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Classical"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="0sp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:fontFamily="@font/hk_grotesk"
                    android:gravity="center"
                    android:background="@drawable/interests"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    Select yes/no before proceeding pop-up-->
<!--    set visibility to "invisible" initially -->
    <TextView
        android:id="@+id/alert"
        android:layout_width="360dp"
        android:layout_height="73dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/frame_34"
        android:fontFamily="@font/hk_grotesk"
        android:gravity="center"
        android:text="Please select Yes/No before
        proceeding."
        android:textColor="#EE6337"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationZ="1dp"/>

    <!--    continue button -->
    <Button
        android:id="@+id/Continue_button"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#747474"
        android:fontFamily="@font/clash_700"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />
</androidx.constraintlayout.widget.ConstraintLayout>