        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/SignUp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_to_"
        app:layout_constraintVertical_bias="0.723"
        android:background="@drawable/login_button_bg"
        android:textSize="16sp"
        app:icon="@drawable/outlook_logo"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        />-->

        <LinearLayout
        android:id="@+id/sign_in_outlook"
        android:layout_width="272dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/signupbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_to_"
        app:layout_constraintVertical_bias="0.723"
        android:background="@drawable/login_button_bg"
        android:orientation="horizontal">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/outlook_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Continue with Outlook"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/hk_grotesk"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/signInButton"
        android:layout_width="272dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/signupbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_to_"
        app:layout_constraintVertical_bias="0.887"
        android:background="@drawable/login_button_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="23dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/google_logo"
            android:layout_marginRight="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Continue with Google"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/hk_grotesk"/>
<!--        <com.google.android.gms.common.SignInButton-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->

    </LinearLayout>



<!--    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:text="Continue with Google"
        app:layout_constraintBottom_toTopOf="@+id/SignUp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_to_"
        app:layout_constraintVertical_bias="0.866"
        android:background="@drawable/login_button_bg"
        >

    </com.google.android.gms.common.SignInButton>-->

    <TextView
        android:id="@+id/already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="@color/White"
        android:textSize="19sp"
        android:fontFamily="@font/hk_grotesk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupbutton"
        app:layout_constraintVertical_bias="0.317" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/already_have_an_account"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/login_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login here"
            android:textColor="@color/White"
            android:textSize="19sp"
            android:textStyle="bold"
            android:fontFamily="@font/hk_grotesk"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>