<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Background"
    tools:context=".ResetPassword">

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:src="@drawable/backbtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        style="@style/headerText"
        android:textColor="@color/lighterPurple"
        android:fontFamily="@font/futuraptdemi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/textView3"
        style="@style/subText"
        android:textColor="@color/IndianRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/futuraptmedium"
        android:text="Please enter the email address used to register your account."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />


    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/custom_edit_text"
        android:fontFamily="@font/aileron_regular"
        android:hint="Email"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/primaryCol"
        style="@style/tertiaryText"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.34" />


    <Button
        android:id="@+id/reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/proceed_button"
        android:elevation="0dp"
        android:fontFamily="@font/futuraptmedium"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:paddingVertical="15dp"
        android:paddingStart="20dp"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="@color/creamWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/reset_password"
        app:layout_constraintEnd_toEndOf="@+id/reset_password"
        app:layout_constraintTop_toTopOf="@+id/reset_password"
        app:srcCompat="@drawable/proceed_arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>