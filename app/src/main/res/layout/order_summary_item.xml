<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".OrderSummaryActivity">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/order_summary_item_bg"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/merch_image"
            android:layout_width="88dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/hoodie"
            android:contentDescription="merch image"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/details"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clash_display_500"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="Lightning" />

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintBottom_toTopOf="@id/price_ll"
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/hk_grotesk_400"
                android:textColor="@color/TextGrey"
                android:textSize="16sp"
                tools:text="Hoodie, Large, 2 Qty" />

            <LinearLayout
                android:id="@+id/price_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clash_display_500"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="â‚¹1598." />

                <TextView
                    android:id="@+id/decimal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clash_display_500"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="00"
                    android:layout_marginBottom="2.5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="1dp"/>
            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hk_grotesk_400"
                android:textColor="@color/TextGrey"
                android:textSize="14sp"
                tools:text="Delivery by 7 Jan" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</LinearLayout>