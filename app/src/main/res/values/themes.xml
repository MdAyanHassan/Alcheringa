<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alcheringa2022" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blu</item>
        <item name="colorPrimaryVariant">@color/DarkBlu</item>
        <item name="colorOnPrimary">@color/Black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Blu</item>
        <item name="colorSecondaryVariant">@color/DarkBlu</item>
        <item name="colorOnSecondary">@color/White</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>

        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AppThemeMaterial" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/White</item>
        <item name="colorPrimaryDark">@color/Blu</item>
        <item name="colorOnPrimary">@color/Black</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/lighterPurple</item>
        <item name="android:fontFamily">@font/futuraptdemi</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">@color/darkbar</item>
    </style>

    <style name="secondaryText">
        <item name="android:textColor">@color/HighBlack</item>
    </style>

    <style name="subText">
        <item name="android:textColor">@color/IndianRed</item>
        <item name="android:fontFamily">@font/futuraptmedium</item>
    </style>

    <style name="tertiaryText">
        <item name="android:textColor">@color/MidWhite</item>
        <item name="android:textColorHint">@color/MidWhite</item>
    </style>

    <style name="accentText">
        <item name="android:textColor">@color/OrangeText</item>
    </style>

    <style name="drawerMenu">
        <item name="android:textColor">@color/darkbar</item>
        <item name="android:fontFamily">@font/futuraptbook</item>
        <item name="android:textSize">18sp</item>
        <item name="itemIconTint">@color/darkbar</item>
    </style>

    <style name="themeButton">
        <item name="srcCompat">@drawable/ic_themechangedark</item>
    </style>

